{
  "name": "@optima-chat/bi",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev -w @optima-chat/bi-backend",
    "dev:cli": "npm run dev -w @optima-chat/bi-cli",
    "build": "npm run build -w @optima-chat/bi-backend && npm run build -w @optima-chat/bi-cli",
    "lint": "npm run lint -ws --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "test": "npm run test -ws --if-present",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^18.19.50",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
